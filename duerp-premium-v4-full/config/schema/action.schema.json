{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Action",
  "type": "object",
  "required": [
    "id",
    "risk_id",
    "title",
    "type",
    "impact",
    "difficulty",
    "cost"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "risk_id": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "enum": [
        "Technique",
        "Organisationnelle",
        "Humaine",
        "EPI"
      ]
    },
    "impact": {
      "type": "string"
    },
    "difficulty": {
      "type": "string",
      "enum": [
        "Faible",
        "Moyenne",
        "Élevée"
      ]
    },
    "cost": {
      "type": "string",
      "enum": [
        "Faible",
        "Moyen",
        "Élevé"
      ]
    },
    "references": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}